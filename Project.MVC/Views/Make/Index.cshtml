@model IEnumerable<Project.MVC.ViewModels.VehicleMakeViewModel>
    

@{
    ViewData["Title"] = "Vehicle Makes";
}

<h2>Vehicle Makes</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
           <th> @Html.DisplayNameFor(m => m.First().Name)</th>
           <th> @Html.DisplayNameFor(m => m.First().Abrv)</th>
           <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Abrv</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


